<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgviewBackground_dataixuong"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    </ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_hinh_dataixuong"
        android:layout_alignTop="@+id/imgviewBackground_dataixuong"
        android:layout_width="90dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="90dp">

        <ImageView
            android:src="@drawable/main_image"
            android:scaleType="fitXY"
            android:id="@+id/imgview_hinhbh_dataixuong"
            android:layout_width="90dp"
            android:layout_height="90dp">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_alignTop="@+id/imgviewBackground_dataixuong"
        android:layout_toRightOf="@+id/cardview_hinh_dataixuong"
        android:layout_width="200dp"
        android:layout_height="80dp">

        <TextView
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/txtview_ten_dataixuong"
            android:layout_width="200dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="16sp"
            android:text="Tên Bài Hát">
        </TextView>

        <TextView
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="14sp"
            android:maxLines="1"
            android:id="@+id/txtview_casi_dataixuong"
            android:layout_width="200dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="Tên Ca Sĩ">
        </TextView>
    </LinearLayout>
    <ImageButton
        android:id="@+id/icon_moreoption_dataixuong"
        android:background="@null"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@id/imgviewBackground_dataixuong"
        android:src="@drawable/icon_more4"
        android:layout_width="30dp"
        android:layout_height="40dp">
    </ImageButton>
</RelativeLayout>