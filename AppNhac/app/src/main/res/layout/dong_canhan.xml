<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgviewBackground_dongcanhan"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    </ImageView>

    <ImageView
        android:src="@drawable/no_image"
        android:layout_alignTop="@+id/imgviewBackground_dongcanhan"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:id="@+id/imgview_hinh_dongcanhan"
        android:layout_width="80dp"
        android:layout_height="80dp">
    </ImageView>

    <LinearLayout
        android:weightSum="2"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_alignTop="@+id/imgviewBackground_dongcanhan"
        android:layout_toRightOf="@+id/imgview_hinh_dongcanhan"
        android:layout_width="200dp"
        android:layout_height="80dp">

        <TextView
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/txtview_title_dongcanhan"
            android:layout_width="200dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="16sp"
            android:text="no text">
        </TextView>

        <TextView
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="14sp"
            android:maxLines="1"
            android:id="@+id/txtview_soluong_dongcanhan"
            android:layout_width="200dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="no text">
        </TextView>
    </LinearLayout>
</RelativeLayout>