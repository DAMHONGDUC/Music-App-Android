<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_hinh_Ablum"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/no_image"
            android:id="@+id/img_hinhAlbum"
            android:layout_width="140dp"
            android:scaleType="fitXY"
            android:layout_height="140dp">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_below="@+id/cardview_hinh_Ablum"
        android:textSize="16sp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:text="Ten Album"
        android:lines="1"
        android:maxLines="2"
        android:id="@+id/txtview_tenAlbum"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <TextView
        android:layout_below="@+id/txtview_tenAlbum"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:text="Ten Ca si Album"
        android:id="@+id/txtview_tenCasiAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</RelativeLayout>