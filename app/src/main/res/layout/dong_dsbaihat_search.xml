<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgviewBackground_dsbaihat_search"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    </ImageView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_hinhbh_search"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_alignTop="@+id/imgviewBackground_dsbaihat_search"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/no_image"
            android:scaleType="fitXY"
            android:id="@+id/imgview_hinhbh_search"
            android:layout_width="70dp"
            android:layout_height="70dp">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/imgviewBackground_dsbaihat_search"
        android:layout_toRightOf="@+id/cardview_hinhbh_search"
        android:layout_width="250dp"
        android:layout_height="70dp">

        <TextView
            android:layout_weight="1"
            android:ellipsize="end"
            android:id="@+id/txtview_tenbh_search"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="14sp"
            android:text="Tên Bài Hát">
        </TextView>

        <TextView
            android:layout_weight="1"
            android:textSize="13sp"
            android:maxLines="1"
            android:id="@+id/txtview_casi_search"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Tên Ca Sĩ">
        </TextView>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/iconLuotThich_dsbaihat_search"
            android:src="@drawable/iconlove"
            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="4dp"
        android:layout_alignEnd="@id/imgviewBackground_dsbaihat_search"
        android:src="@drawable/icon_more3"
        android:layout_width="20dp"
        android:layout_height="20dp">
    </ImageView>


</RelativeLayout>