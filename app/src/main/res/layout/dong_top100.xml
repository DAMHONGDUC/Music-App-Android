<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgviewBackground_top100"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginRight="10dp" >

    </ImageView>

    <TextView
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:layout_alignTop="@id/imgviewBackground_top100"
        android:text="0"
        android:id="@+id/stt_top100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/stt_top100"
        android:id="@+id/cardview_hinh_top100"
        android:layout_alignTop="@+id/imgviewBackground_top100"
        android:layout_width="80dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"

        android:layout_height="80dp">

        <ImageView
            android:src="@drawable/no_image"
            android:scaleType="fitXY"
            android:id="@+id/imgview_hinh_top100"
            android:layout_width="80dp"
            android:layout_height="80dp">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:weightSum="3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_alignTop="@+id/imgviewBackground_top100"
        android:layout_toRightOf="@+id/cardview_hinh_top100"
        android:layout_width="200dp"
        android:layout_height="80dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/txtview_ten_top100"
            android:layout_width="200dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"

            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="16sp"
            android:text="Tên Bài Hát">
        </TextView>

        <TextView
            android:layout_weight="1"
            android:textSize="14sp"
            android:maxLines="1"
            android:id="@+id/txtview_casi_top100"
            android:layout_width="200dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="Tên Ca Sĩ">
        </TextView>
        <ImageView
            app:tint="@color/red"
            android:layout_weight="1"
            android:id="@+id/iconLuotThich_top100"
            android:src="@drawable/iconlove"
            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/icon_moreoption_top100"
        android:background="@null"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@id/imgviewBackground_top100"
        android:src="@drawable/icon_more4"
        android:layout_width="30dp"
        android:layout_height="40dp">
    </ImageButton>

</RelativeLayout>