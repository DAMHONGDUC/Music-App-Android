<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_dsBaiHat_DaTaiXuong">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            app:layout_collapseMode="pin"
            android:popupTheme="@style/Theme.AppCompat.Light"
            android:id="@+id/toolbar_dataixuong"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/toolbar_dataixuong"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/recyclerview_dataixuong"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_playmusic_minium2"
        android:name="com.example.appnhac.Fragment.Fragment_Playmusic_minium2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </fragment>

</LinearLayout>